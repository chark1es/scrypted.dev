---
const links = [
	{ label: "Projects", href: "/#projects" },
	{ label: "Stack", href: "/#stack" },
	{ label: "Status", href: "/#status" }
];
---

<header class="site-nav glass-panel">
	<div class="logo-block">
		<a href="/" aria-label="Spwnd home">
			<img src="/favicon.svg" alt="Spwnd logo" loading="lazy" />
		</a>
		<div>
			<p class="logo-label">Spwnd</p>
			<p class="logo-sub">personal dev console</p>
		</div>
	</div>

	<nav aria-label="Primary">
		<ul>
			{links.map((link) => (
				<li>
					<a href={link.href}>{link.label}</a>
				</li>
			))}
		</ul>
	</nav>

	<a class="cta" href="/#contact">Ping for Access</a>
</header>

<style>
.site-nav {
	position: sticky;
	top: 1.5rem;
	display: grid;
	grid-template-columns: auto 1fr auto;
	align-items: center;
	gap: 1.5rem;
	padding: 1rem 1.5rem;
	z-index: 20;
}

.logo-block {
	display: flex;
	align-items: center;
	gap: 0.9rem;
}

.logo-block img {
	height: 42px;
	width: auto;
	filter: grayscale(1);
}

.logo-label {
	margin: 0;
	font-weight: 600;
	text-transform: uppercase;
	letter-spacing: 0.2em;
	font-size: 0.75rem;
}

.logo-sub {
	margin: 0;
	color: rgba(5, 5, 5, 0.5);
	font-size: 0.75rem;
}

nav ul {
	list-style: none;
	margin: 0;
	padding: 0;
	display: flex;
	gap: 1.25rem;
	justify-content: center;
}

nav a {
	font-size: 0.9rem;
	font-weight: 500;
}

.cta {
	border: 1px solid var(--ink);
	border-radius: 999px;
	padding: 0.65rem 1.5rem;
	font-size: 0.9rem;
	font-weight: 600;
	text-transform: uppercase;
	letter-spacing: 0.15em;
}

@media (max-width: 880px) {
	.site-nav {
		grid-template-columns: 1fr;
		text-align: center;
	}

	nav ul {
		flex-wrap: wrap;
	}

	.cta {
		justify-self: center;
	}
}
</style>

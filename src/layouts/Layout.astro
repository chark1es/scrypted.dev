---
import Nav from "../components/Nav.astro";
import "../styles/global.css";

const { title = "Spwnd" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Spwnd is a personal dev console for in-progress tools shared with friends, collaborators, and the future public." />
		<title>{title}</title>
	</head>
	<body>
		<div class="relative min-h-screen bg-grid">
			<div class="noise-overlay"></div>
			<div class="relative mx-auto max-w-[1240px] px-5 pb-12 pt-8 sm:px-7 md:px-8 lg:px-12">
				<Nav />
				<main class="mt-8 space-y-16 md:mt-12 md:space-y-28">
					<slot />
				</main>
				<footer class="mt-16 border-t border-black/10 pt-8 text-sm text-black/70">
					<div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
						<div>
							<p class="text-xs font-semibold uppercase tracking-[0.25em] text-black">Spwnd</p>
							<p class="mt-1 text-sm text-black/60">Personal/family builds now. Select apps open up to the public soon.</p>
						</div>
						<div class="flex gap-4 text-sm font-medium text-black">
							<a href="/terms">Terms of Service</a>
							<a href="/privacy">Privacy Policy</a>
						</div>
					</div>
					<p class="mt-6 text-[0.7rem] uppercase tracking-[0.3em] text-black/50">
						Convex + Logto handle identity. You own your data; email hello@spwnd.dev for account deletion.
					</p>
				</footer>
			</div>
		</div>
	</body>
</html>
